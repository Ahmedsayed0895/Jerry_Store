                android:layout_marginStart="8dp"
                android:background="@drawable/dark_blue_stroke"
                android:contentDescription="@string/notifications_button"
                android:src="@drawable/add_to_cart_icon"
                app:tint="@color/dark_blue"
                app:layout_constraintStart_toEndOf="@id/spy_tom_price_button"
                app:layout_constraintTop_toTopOf="@id/spy_tom_price_button"
                app:layout_constraintBottom_toBottomOf="@id/spy_tom_price_button"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:scaleType="fitCenter"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/tom_spy"
        android:contentDescription="@string/sport_tom"
        app:layout_constraintStart_toStartOf="@id/spy_tom_card"
        app:layout_constraintEnd_toEndOf="@id/spy_tom_card"
        app:layout_constraintBottom_toBottomOf="@id/spy_tom_card"
        android:scaleType="fitCenter"
        android:layout_marginBottom="145dp"
        />
    <!--frozen Tom card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/frozen_tom_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
