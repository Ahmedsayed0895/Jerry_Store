                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue"
                android:text="@string/_12_cheeses"
                android:textColor="@color/dark_blue"
                app:icon="@drawable/money_bag_01"
                app:iconGravity="textStart"
